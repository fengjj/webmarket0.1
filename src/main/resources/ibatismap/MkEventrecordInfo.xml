<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap 
	PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
	"http://ibatis.apache.org/dtd/sql-map-2.dtd">


<sqlMap namespace="MkEventrecordInfo">

	<sql id="select-all-column">
		SELECT
		phone_no AS phoneNo,
		monitor_id AS monitorId,
		event_id AS eventId,
		msg_content AS msgContent,
		oper_time as operTime
		FROM mk_eventrecord_info
	</sql>

	<sql id="where-all-condition">
		<dynamic prepend=" WHERE ">
			<isNotNull property="phoneNo" prepend="and">
				<isNotEmpty property="phoneNo">
					phone_no = #phoneNo#
				</isNotEmpty>
			</isNotNull>
			<isNotNull property="monitorId" prepend="and">
				<isNotEmpty property="monitorId">
					monitor_id = #monitorId#
				</isNotEmpty>
			</isNotNull>
			<isNotNull property="eventId" prepend="and">
				<isNotEmpty property="eventId">
					event_id = #eventId#
				</isNotEmpty>
			</isNotNull>
			<isNotNull property="msgContent" prepend="and">
				<isNotEmpty property="msgContent">
					msg_content = #msgContent#
				</isNotEmpty>
			</isNotNull>
			<isNotNull property="operTime" prepend="and">
				<isNotEmpty property="operTime">
					oper_time = #operTime#
				</isNotEmpty>
			</isNotNull>
		</dynamic>
	</sql>

	<select id="selectMkEventrecordInfo" parameterClass="java.util.Map" resultClass="java.util.HashMap">
		<include refid="select-all-column" />
		<include refid="where-all-condition" />
		order by operTime desc
	</select>
	
</sqlMap>
