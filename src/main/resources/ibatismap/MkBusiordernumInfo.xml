<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap 
	PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"      
	"http://ibatis.apache.org/dtd/sql-map-2.dtd">


<sqlMap namespace="MkBusiordernumInfo">


	<sql id="select-all-column">
	SELECT
		busi_id as busiId,
		busi_type as busiType,
		order_flag as orderFlag,
		order_num as orderNum
		FROM mk_busiordernum_info
	</sql>
	
	<sql id="where-all-condition">
	<dynamic prepend=" WHERE ">
			<isNotNull property="busiId" prepend="and">
				<isNotEmpty property="busiId">
					busi_id = #busiId#
				</isNotEmpty>
			</isNotNull>
			<isNotNull property="busiType" prepend="and">
				<isNotEmpty property="busiType">
					busi_type = #busiType#
				</isNotEmpty>
			</isNotNull>
			<isNotNull property="orderFlag" prepend="and">
				<isNotEmpty property="orderFlag">
					order_flag = #orderFlag#
				</isNotEmpty>
			</isNotNull>
			<isNotNull property="orderNum" prepend="and">
				<isNotEmpty property="orderNum">
					order_num = #orderNum#
				</isNotEmpty>
			</isNotNull>
			<isPropertyAvailable property="busiIdList" prepend="and">
				<isNotNull property="busiIdList">
					<isNotEmpty property="busiIdList">
						busi_id in
						<iterate property="busiIdList" open="(" close=")" conjunction=","> 
		    				#busiIdList[]#
		    			</iterate>
					</isNotEmpty>
				</isNotNull>
			</isPropertyAvailable>
			
			
	</dynamic>
	</sql>
	
	<select id="selectMkBusiordernumInfoById" parameterClass="java.util.Map" resultClass="java.util.HashMap">
		<include refid="select-all-column"/>
		WHERE busi_id = #busiId#
	</select>

	<select id="selectMkBusiordernumInfo" parameterClass="java.util.Map" resultClass="java.util.HashMap">
		<include refid="select-all-column"/>
		<include refid="where-all-condition"/>
	</select>
	
	<insert id="insertMkBusiordernumInfo" parameterClass="java.util.Map">
	<![CDATA[
		INSERT INTO mk_busiordernum_info(
				busi_id,
				busi_type,
				order_flag,
				order_num
		) VALUES (
				#busiId#,
				#busiType#,
				#orderFlag#,
				#orderNum#
		)
	]]>
	</insert>
	
	<update id="updateMkBusiordernumInfo" parameterClass="java.util.Map">
			<![CDATA[
			UPDATE mk_busiordernum_info SET 
				order_num = #orderNum#
			where busi_id =#busiId#
				and busi_type = #busiType#
			]]>
	</update>
	
	
</sqlMap>
